<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">EDIT <%=project.name%> </h1>
    <div class="edit-">
        <form action="/ongoingProjects/<%=project.id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="blog[name]" value="<%=project.name%>"required="true">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="blog[description]" required="true"><%=project.description%></textarea>
                
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[image]" value="<%=project.image%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[ptype]" value="<%=project.ptype%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[subject]" value="<%=project.subject%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[venue]" value="<%=project.venue%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[dates]" value="<%=project.dates%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[peoplenumber]" value="<%=project.peoplenumber%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[agelimit]" value="<%=project.agelimit%>"required="true">
            </div>
            <div class="form-group">
                <input class="form-control" type="text"name="blog[partners]" value="<%=project.partners%>"required="true">
            </div>
            <div class="form-group">
                <label for="complete">Ongoing</label>
                <input class="form-control" type="radio"name="blog[completed]" value="false" id="complete"required="true">
                <label for="complete">Complete</label>
                <input class="form-control" type="radio"name="blog[completed]" value="true" id="complete"required="true">
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-info btn-block">SUBMIT</button>
            </div>
        </form>

        <a href="/campground">Click to go back to campgrounds</a>
    </div>
</div>
<% include ../partials/footer %>